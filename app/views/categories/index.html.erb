<section class="h-full w-full min-h-screen flex flex-col">
  <div class="h-4/5 w-full flex flex-col border-2 overflow-y-scroll">
    <% @categories.each do |category|%>
      <div class="flex rounded bg-white w-full border-2 gap-4 p-4">
        <div class="w-24 border-2">
          <%= image_tag category.icon, :alt => 'icon-logo'%>
        </div>

        <div class="w-3/4 flex flex-col border-2">
          <div class="flex items-center justify-between py-4">
            <h1 class="text-2xl font-bold text-gray-400"><%= category.name%></h1>
            <h3 class="text-2xl  text-gray-600">$300</h3>
          </div>

          <div class="flex text-gray-400 text-sm">
            <p>Created: <%= time_ago_in_words category.created_at%> ago</p>
          </div>
        
        </div>

      </div>
    <% end %>
  </div> 

  <div class="fixed bottom-0 right-0 bg-main-second w-full p-4 text-white flex items-center justify-center ">
    <%= link_to 'Add Category', new_category_path, class: 'w-full flex items-center justify-center p-8 rounded-md border-2'%>
  </div> 
</section>
