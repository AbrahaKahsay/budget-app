
<section class="flex flex-col">
  <% @categories.each do |category|%>
    <div class="flex flex-col rounded bg-white w-full border-2 gap-4 p-4 h-full w-full min-h-screen">

      <div class="flex">
        <div class="w-24 border-2">
          <%= image_tag category.icon, :alt => 'icon-logo'%>
        </div>
        <div class="flex items-center justify-between ml-6 py-4">
            <h1 class="text-2xl font-bold text-gray-400"><%= category.name%></h1>
        </div>
      </div>

      <div class="flex text-gray-400 text-sm">
        <p>Created: <%= time_ago_in_words category.created_at%> ago</p>
      </div>

      <div>
        <h3 class="text-2xl  text-gray-600">TOTAL PAYMENT: $300</h3>
      </div>

    </div>
  <% end %>
</section>
