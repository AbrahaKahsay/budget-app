<div>
  <%= form_with model: @expenses, url: category_expenses_path do |f| %>
  <section class="h-full bg-white min-h-screen">
    <div class=" py-6  h-full ml-4 mr-4">
      <div class="mb-4">
          <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: 'Name',class:"form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
          %>
        </div>
        <div class="mb-4">
          <%= f.number_field :amount, autofocus: true, autocomplete: "email", placeholder: 'Amount',class:"form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
          %>
        </div>

        <div class="overflow-y-auto h-32  w-full border-2 ">
      <%= f.collection_check_boxes(:category_ids, Category.where(user_id: current_user), :id, :name, {}, {:multiple => true, class: "form-control block max-w-12 max-h-12  px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded" }) %>
      </div>

        <div class="mb-4">
          <%= f.submit "Save", class:"form-control block w-full px-3 py-1.5 text-lg font-normal text-white bg-main-second border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
          %>
        </div>
    </div>
   </section>
<% end %>
</div>
